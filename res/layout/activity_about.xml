<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutExterno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ActivityAbout" >

    <LinearLayout
        android:id="@+id/layoutTexto"
        style="@style/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textTelefonoInfo"
            style="@style/paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_text1" />

        <TextView
            android:id="@+id/TextView03"
            style="@style/paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_text2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView02"
                style="@style/paragraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_text3" />

            <TextView
                android:id="@+id/textEmail"
                style="@style/paragraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_text4"
                android:textColor="@color/blue" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textQue3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/about_que"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/grey_transparent"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textAnimationQue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:visibility="invisible" />

    <RadioGroup
        android:id="@+id/radioAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAnimationQue"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="4dp"
        android:visibility="gone" >

        <RadioButton
            android:id="@+id/radioQue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/que_answer1"
            android:textColor="@color/grey_background" />

        <RadioButton
            android:id="@+id/radioQue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/que_answer3"
            android:textColor="@color/grey_background" />

        <RadioButton
            android:id="@+id/radioQue3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/que_answer2"
            android:textColor="@color/grey_background" />
    </RadioGroup>

    <TextView
        android:id="@+id/textQue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutTexto"
        android:layout_marginRight="11dp"
        android:layout_marginTop="41dp"
        android:layout_toLeftOf="@+id/textQue3"
        android:text="@string/about_que"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/grey_transparent" />

    <TextView
        android:id="@+id/textQue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layoutTexto"
        android:layout_below="@+id/textAnimationQue"
        android:layout_marginTop="67dp"
        android:text="@string/about_que"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/grey_transparent"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textQue4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAnimationQue"
        android:layout_below="@+id/textQue1"
        android:text="@string/about_que"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/grey_transparent"
        android:visibility="invisible" />

    <RadioGroup
        android:id="@+id/radioPythonAnswers"
        style="@style/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/radioPythonAnswers"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/pythonMargin"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textView1"
            style="@style/paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/python_question"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioPython1"
            style="@style/paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/python_answer2" />

        <RadioButton
            android:id="@+id/radioPython2"
            style="@style/paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/python_answer" />

        <RadioButton
            android:id="@+id/radioPython3"
            style="@style/paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/python_answer3" />
    </RadioGroup>

    <ImageView
        android:id="@+id/twitterLogo"
        android:layout_width="@dimen/birdSize"
        android:layout_height="@dimen/birdSize"
    	android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/birdMarginB"
        android:contentDescription="@string/empty_string"
        android:src="@drawable/twitter_logo"
        android:visibility="visible" 
        android:translationX="@dimen/birdTranslation"/>

    <TextView
        android:id="@+id/textTwitter"
        style="@style/paragraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_twitter"
        android:textColor="@color/white"
        android:layout_below="@+id/radioPythonAnswers"
        android:layout_alignLeft="@id/radioPythonAnswers"
        android:layout_marginLeft="3dp"
        android:visibility="gone" />
	
    <ImageView
        android:id="@+id/deep_thought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_deep"
        android:contentDescription="@string/empty_string"
        android:src="@drawable/deep_thought"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textMeaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meaning_life"
        style="@style/paragraph"
        android:textColor="@color/yellow_deep"
        android:visibility="invisible" 
        android:layout_below="@+id/deep_thought"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <EditText
        android:id="@+id/editMeaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMeaning"
        android:layout_centerHorizontal="true"
        android:ems="3"
        android:inputType="number" 
        android:visibility="invisible"
        android:textColor="@color/yellow_deep"
        android:maxLength="3">
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textMonkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_string"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="@style/title"
        android:textColor="@color/purple_lechuck"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />

</RelativeLayout>